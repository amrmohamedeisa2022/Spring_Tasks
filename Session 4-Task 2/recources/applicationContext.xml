<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="task2"/>

    <context:property-placeholder location="classpath:app.properties"/>


<bean id="draw2D" class="task1.Draw2d"></bean>
    <bean id="draw3D" class="task1.Draw3d"></bean>


    <bean id="circle" class="task1.Circle" >  <!-- Singleton by default this will return same object -->
        <constructor-arg ref="draw2D"/>
        <constructor-arg ref="draw3D"/>
    </bean>


    <bean id="square" class="task1.Square" scope="prototype">    <!--  this will return different object -->
        <property name="draw2d" ref="draw2D"/>
        <property name="draw3d" ref="draw3D"/>
    </bean>




    <bean id="database" class="task2.DataBase">
        <property name="url" value="${database.url}"/>
        <property name="password" value="${database.password}"/>
        <property name="username" value="${database.username}"/>
    </bean>


    <bean id="car" class="com.vehiclesSystem.models.Car">
        <constructor-arg ref="database"></constructor-arg>
    </bean>


    <bean id="plane" class="com.vehiclesSystem.models.Plane">
        <property name="db" ref="database"/>
    </bean>

<bean id="init" class ="task1.DataBaseOperations" init-method="connectToDatabase" destroy-method="disconnectToDatabase">

</bean>

<context:component-scan base-package="example1"></context:component-scan>

</beans>